  <table class="table striped-table">
    <thead>
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Photo</th>
        <th>Condition</th>
        <th>Dimensions in cm(height, width)</th>
        <th>Furnipoints</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @furnitures.each do |furniture| %>
        <tr>
          <td><%= furniture.name %></td>
          <td><%= furniture.content %></td>
          <td><img src=<%= furniture.image_url %>/></td>
          <td><%= furniture.condition %></td>
          <td><%= furniture.dimensions %></td>
          <td><%= link_to 'Show', furniture %></td>
          <td><%= link_to 'Edit', edit_furniture_path(furniture) %></td>
          <td><%= link_to 'Destroy', furniture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>