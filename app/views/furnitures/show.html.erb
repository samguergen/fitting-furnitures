<p id="notice"><%= notice %></p>
<div class="container">
  <div class="furni-show">

    <div class="furni-top">
      <strong>Item:</strong>
      <%= @furniture.name %>

      <%= link_to 'Edit', edit_furniture_path(@furniture) %> |
      <%= link_to 'Back', furnitures_path %>
    </div>

    <div class="furni-middle">

      <div class="furni-img">
      <img src=<%= @furniture.image_url %>/>
    </div>

      <p>
        <strong>Condition:</strong>
        <%= @furniture.condition %>
      </p>

      <p>
        <strong>Cost:</strong>
        <%= @furniture.furnipoints %> furnipoints
      </p>

      <p>
        <strong>Description:</strong>
        <%= @furniture.content %>
      </p>

      <p>
        <strong>Dimensions:</strong>
        <%= @furniture.dimensions %>
      </p>

    </div>

    <div class="furni-bottom">
    </div>

  </div>
</div>
